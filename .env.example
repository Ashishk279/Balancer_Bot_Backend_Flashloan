# Arbitrage Bot Environment Variables - Parallel Processing v2.0

# ==========================================
# LOCAL ETHEREUM NODE (PRIMARY - ULTRA LOW LATENCY!)
# ==========================================
# Your local Ethereum node (Geth/Erigon) - See docs/LOCAL_NODE_SETUP.md
LOCAL_NODE_HTTP=http://127.0.0.1:8545
LOCAL_NODE_WS=ws://127.0.0.1:8546

# ==========================================
# BACKUP REMOTE NODES (FALLBACK)
# ==========================================
# Backup RPC endpoints (used if local node fails)
ETHEREUM_RPC_HTTP=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ETHEREUM_RPC_WS=wss://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ALCHEMY_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
QUICKNODE_URL=https://YOUR-ENDPOINT.quiknode.pro/YOUR_KEY
INFURA_URL=https://mainnet.infura.io/v3/YOUR_KEY

# ==========================================
# PARALLEL PROCESSING (NEW - 90-95% SUCCESS RATE!)
# ==========================================
# Enable parallel processing features (true/false)
ENABLE_PARALLEL_PROCESSING=true

# Number of concurrent execution workers (recommended: 5)
NUM_EXECUTION_WORKERS=5

# Enable performance monitoring and statistics (true/false)
ENABLE_PERFORMANCE_MONITORING=true

# ==========================================
# WALLET & SECURITY
# ==========================================
# Private key for executing transactions (KEEP SECURE!)
PRIVATE_KEY=0x1234567890abcdef...

# Arbitrage smart contract address
ARBITRAGE_CONTRACT_ADDRESS=0x...

# ==========================================
# DATABASE
# ==========================================
# PostgreSQL connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arbitrage_db
DB_USER=postgres
DB_PASSWORD=your_password

# ==========================================
# REDIS
# ==========================================
# Redis for opportunity caching
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# ==========================================
# API SERVER
# ==========================================
# API server configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=*

# ==========================================
# PRIORITY FEE CONFIGURATION (NEW!)
# ==========================================
# Priority fee in Gwei (tip to validators for faster inclusion)
# Higher = faster inclusion in blocks, but more expensive
# Recommended: 2-5 Gwei for normal, 10-20 Gwei for urgent
PRIORITY_FEE_GWEI=2

# Maximum fee multiplier (multiplied by base fee)
# Sets the maximum you're willing to pay per gas
# Recommended: 2-3x for normal, 4-5x for urgent
MAX_FEE_MULTIPLIER=2

# ==========================================
# FLASHBOTS (Optional)
# ==========================================
# Flashbots relay URL (for MEV protection)
FLASHBOTS_RELAY=https://relay.flashbots.net

# ==========================================
# V3 ENGINE
# ==========================================
# Enable/disable V3 arbitrage engine
V3_ENGINE_ENABLED=true

# Batch size for pair processing
BATCH_SIZE=5

# ==========================================
# EXECUTION LIMITS
# ==========================================
# Minimum profit threshold (in ETH) to execute
MIN_PROFIT_THRESHOLD=0.01

# Maximum gas price willing to pay (in Gwei)
MAX_GAS_PRICE=200

# ==========================================
# LOGGING
# ==========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ==========================================
# MONITORING
# ==========================================
# Enable/disable real-time WebSocket updates
WEBSOCKET_ENABLED=true

# ==========================================
# WORKER THREADS (NEW - Swap Event & Mempool Monitoring)
# ==========================================
# Enable Swap Event Listener Worker (monitors DEX swaps for arbitrage)
ENABLE_SWAP_EVENT_WORKER=true

# Enable Mempool Monitor Worker (watches pending transactions for backrun opportunities)
ENABLE_MEMPOOL_WORKER=true

# Minimum swap value to track (in USD) - Default: $10,000
MIN_SWAP_VALUE_USD=10000

# WebSocket and HTTP URLs for workers (usually same as main bot)
ETH_WS_URL=ws://127.0.0.1:8546
ETH_HTTP_URL=http://127.0.0.1:8545
